{
  "name": "RaftVR",
  "author": "DrBibop",
  "description": "A virtual reality mod for Raft",
  "version": "1.0",
  "license": "GNU AGPLv3",
  "icon": "icon.png",
  "banner": "banner.jpg",
  "gameVersion": "1.0",
  "requiredByAllPlayers": false,
  "updateUrl": "https://www.raftmodding.com/api/v1/mods/raftvr/version.txt",
  "isModPermanent": true,
  "excludedFiles": [],
  "modSettings": [
	{
      "type": "button",
      "name": "calibrate",
      "text": "Calibrate & Recenter"
    },
	{
      "type": "checkbox",
      "name": "snapTurn",
      "text": "Snap Turn",
      "access": "both",
      "default": true
    },
	{
      "type": "slider",
      "name": "snapTurnAngle",
      "text": "Snap Turn Angle",
      "access": "both",
      "default": 45,
      "range": {
        "type": "number",
        "min": 30,
        "max": 180,
        "decimals": 0
      }
    },
	{
      "type": "slider",
      "name": "smoothTurnSpeed",
      "text": "Smooth Turn Speed",
      "access": "both",
      "default": 90,
      "range": {
        "type": "number",
        "min": 45,
        "max": 360,
        "decimals": 0
      }
    },
	{
      "type": "combobox",
      "name": "directionOrigin",
      "text": "Move Direction Origin",
      "access": "both",
      "default": "Head",
      "values": [ "Head", "Controller" ]
    },
	{
      "type": "checkbox",
      "name": "seatedMode",
      "text": "Seated Mode",
      "access": "both",
      "default": false
    },
	{
      "type": "checkbox",
      "name": "interactionRay",
      "text": "Show Interaction Ray",
      "access": "both",
      "default": true
    },
	{
      "type": "checkbox",
      "name": "immersiveThrow",
      "text": "Immersive Throwing",
      "access": "both",
      "default": true
    },
	{
      "type": "slider",
      "name": "throwForceMultiplier",
      "text": "Throw Force Multiplier",
      "access": "both",
      "default": 1,
      "range": {
        "type": "number",
        "min": 1,
        "max": 3,
        "decimals": 2
      }
    },
	{
      "type": "combobox",
      "name": "useRadialHotbar",
      "text": "Use Radial Hotbar",
      "access": "both",
      "default": "Always",
      "values": [ "Always", "When Holding Direction" ]
    },
	{
      "type": "combobox",
      "name": "playspaceCenter",
      "text": "Show Center of Playspace",
      "access": "both",
      "default": "When Far",
      "values": [ "Always", "When Far", "Never" ]
    },
	{
      "type": "checkbox",
      "name": "underwaterDistortion",
      "text": "Underwater Distortion Effect",
      "access": "both",
      "default": false
    },
	{
      "type": "combobox",
      "name": "runtime",
      "text": "VR Runtime (Requires Restart)",
      "access": "both",
      "default": "SteamVR",
      "values": [ "SteamVR", "Oculus" ]
    },
	{
      "type": "data",
      "name": "hiddenSettings",
      "access": "both",
      "default": {
		"armScale": "0.0"
      }
    }
  ]
}